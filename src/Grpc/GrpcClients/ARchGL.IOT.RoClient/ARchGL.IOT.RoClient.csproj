<Project Sdk="Microsoft.NET.Sdk">
	<Import Project="..\..\..\..\..\Common\Config\common.props" />

	<PropertyGroup>
		<TargetFrameworks>netstandard2.1;netstandard2.0</TargetFrameworks>
		<RootNamespace>ARchGL.IOT.RoClient</RootNamespace>
		<Version>1.0.0</Version>
	</PropertyGroup>

	<ItemGroup>
		<None Remove="ARchGL.IOT.RoClient.xml" />
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Include="ARchGL.IOT.RoClient.xml">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</EmbeddedResource>
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.1'">
		<PackageReference Include="Grpc.Net.Client" Version="2.33.1" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Google.Protobuf" Version="3.19.4" />
		<PackageReference Include="Grpc" Version="2.32.0" />
		<PackageReference Include="Grpc.Core" Version="2.33.1" />
		<PackageReference Include="Grpc.Tools" Version="2.33.1" PrivateAssets="All" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
	</ItemGroup>

	<ItemGroup>
		<Protobuf Include="..\..\Protos\Reverse.proto" Link="Protos\Reverse.proto" GrpcServices="Client" />
	</ItemGroup>
</Project>
